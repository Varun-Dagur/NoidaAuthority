<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_16">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:fontFamily="@font/lato_medium"
            android:text="Modification/ Editing of information except for Phone no. and Email ID is not allowed after submission."
            android:textAlignment="center"
            android:textColor="@color/colorTextLight"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_18"
            android:fontFamily="@font/lato_medium"
            android:text="Please verify and submit"
            android:textAlignment="center"
            android:textColor="#FF525E"
            android:textSize="@dimen/sp_18" />

        <View
            android:layout_width="32dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:background="#A2A2A2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_18"
            android:fontFamily="@font/lato_medium"
            android:text="If sure, please enter OTP"
            android:textAlignment="center"
            android:textColor="@color/colorTextBlue"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_6"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/lato_regular"
            android:text="A One-Time Password has been sent to 9999******"
            android:textColor="@color/colorTextLight"
            android:textSize="@dimen/sp_12" />

        <com.noida.authority.utils.OtpEditText
            android:id="@+id/et_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_26"
            android:cursorVisible="false"
            android:digits="1234567890"
            android:inputType="number"
            android:maxLength="4"
            android:textIsSelectable="false"
            android:textSize="20sp" />

        <Button
            android:id="@+id/submit_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@drawable/btn_selector"
            android:fontFamily="@font/lato_regular"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_12"
            android:fontFamily="@font/lato_semibold"
            android:padding="@dimen/dp_4"
            android:text="Resend One-Time Password"
            android:textColor="@color/colorTextLight"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>
</androidx.cardview.widget.CardView>