<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <include layout="@layout/custom_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/lato_medium"
                    android:gravity="start"
                    android:text="@string/department"
                    android:textColor="@color/colorTextLight"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:fontFamily="@font/lato_medium"
                    android:text="@string/ref_no_202042140003639"
                    android:textColor="@color/colorTextLight"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="start"
                    android:text="Horticulture"
                    android:textColor="@color/colorTextBlue"
                    android:textSize="@dimen/sp_14" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/viewStatus"
                        android:layout_width="@dimen/dp_8"
                        android:layout_height="@dimen/dp_8"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dp_12"
                        android:background="@drawable/circle_white"
                        android:backgroundTint="@color/colorAccent" />

                    <TextView
                        android:id="@+id/txtProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_bold"
                        android:gravity="right"
                        android:text="Demand"
                        android:textAllCaps="true"
                        android:textColor="@color/colorTextDark"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25"
                android:fontFamily="@font/lato_medium"
                android:gravity="start"
                android:text="Subject/Nature/Complaint Type"
                android:textColor="@color/colorTextLight"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_weight="1"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="start"
                    android:text="Tree Garbage"
                    android:textColor="@color/colorTextBlue"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="start"
                    android:text="HMC PVT LTD"
                    android:textColor="@color/colorTextBlue"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25"
                android:fontFamily="@font/lato_bold"
                android:gravity="start"
                android:text="STATUS DETAILS"
                android:textColor="@color/colorTextBlue"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_4"
                android:background="#D1D1D1" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txtProjectLead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="32dp"
                    android:text="Project Engineer"
                    app:layout_constraintBottom_toBottomOf="@+id/start_circle"
                    app:layout_constraintStart_toEndOf="@+id/start_circle"
                    app:layout_constraintTop_toTopOf="@+id/start_circle" />

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="Ankit Sharma"
                    android:textColor="@color/colorTextBlue"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintStart_toStartOf="@+id/txtProjectLead"
                    app:layout_constraintTop_toBottomOf="@+id/txtProjectLead" />

                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="status message"
                    app:layout_constraintStart_toStartOf="@+id/txtName"
                    app:layout_constraintTop_toBottomOf="@+id/txtName" />


                <ImageView
                    android:id="@+id/start_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_circle_correct" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/dp_80"
                    android:background="#D8D6D8"
                    app:layout_constraintEnd_toEndOf="@+id/start_circle"
                    app:layout_constraintStart_toStartOf="@+id/start_circle"
                    app:layout_constraintTop_toBottomOf="@+id/start_circle" />

                <TextView
                    android:id="@+id/txtAssis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:text="Assistant Project Engineer"
                    app:layout_constraintBottom_toBottomOf="@+id/start_circle2"
                    app:layout_constraintStart_toStartOf="@+id/txtProjectLead" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="Project Engineer"
                    android:textColor="@color/colorTextBlue"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintBottom_toBottomOf="@+id/start_circle2"
                    app:layout_constraintStart_toStartOf="@+id/txtAssis"
                    app:layout_constraintTop_toBottomOf="@+id/txtAssis" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="status message"
                    app:layout_constraintEnd_toEndOf="@+id/textView3"
                    app:layout_constraintStart_toStartOf="@+id/textView3"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />


                <ImageView
                    android:id="@+id/start_circle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view1"
                    app:srcCompat="@drawable/ic_circle_correct" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/dp_80"
                    android:background="#D8D6D8"
                    app:layout_constraintEnd_toEndOf="@+id/start_circle2"
                    app:layout_constraintStart_toStartOf="@+id/start_circle2"
                    app:layout_constraintTop_toBottomOf="@+id/start_circle2" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:text="Junior Engineer"
                    app:layout_constraintBottom_toBottomOf="@+id/start_circle3"
                    app:layout_constraintStart_toStartOf="@+id/txtAssis" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="Shubham Chauhan"
                    android:textColor="@color/colorTextBlue"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintBottom_toBottomOf="@+id/start_circle3"
                    app:layout_constraintStart_toStartOf="@+id/textView2"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Assigned to the supervisor"
                    app:layout_constraintStart_toStartOf="@+id/textView4"
                    app:layout_constraintTop_toBottomOf="@+id/textView4" />

                <ImageView
                    android:id="@+id/start_circle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view2"
                    app:srcCompat="@drawable/ic_circle_correct" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/dp_80"
                    android:background="#D8D6D8"
                    app:layout_constraintEnd_toEndOf="@+id/start_circle3"
                    app:layout_constraintStart_toStartOf="@+id/start_circle3"
                    app:layout_constraintTop_toBottomOf="@+id/start_circle3" />


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:text="Junior Engineer"
                    app:layout_constraintBottom_toBottomOf="@+id/start_circle4"
                    app:layout_constraintStart_toStartOf="@+id/textView2" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="Shubham Chauhan"
                    android:textColor="@color/colorTextBlue"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintStart_toStartOf="@+id/textView5"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Assigned to the supervisor"
                    app:layout_constraintStart_toStartOf="@+id/textView6"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />


                <ImageView
                    android:id="@+id/start_circle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view3"
                    app:srcCompat="@drawable/ic_circle_empty" />


                <TextView
                    android:id="@+id/txtResolve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/btn_stroke_yellow"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_16"
                    android:paddingBottom="8dp"
                    android:text="Resolve"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_14"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@+id/start_circle4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/start_circle4" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/txtDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dp_48"
                android:background="@drawable/btn_stroke_yellow"
                android:fontFamily="@font/lato_bold"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_16"
                android:paddingTop="@dimen/dp_8"
                android:paddingRight="@dimen/dp_16"
                android:paddingBottom="8dp"
                android:text="MAKE PRIORITY"
                android:textAllCaps="true"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_14"
                android:visibility="gone" />


            <LinearLayout
                android:id="@+id/llUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_16"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:drawableRight="@drawable/ic_asterisk"
                    android:drawablePadding="@dimen/dp_6"
                    android:fontFamily="@font/lato_regular"
                    android:text="Upload Proof "
                    android:textColor="@color/colorTextBlack"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_8"
                        android:layout_toLeftOf="@+id/attach_id_proof"
                        android:background="@drawable/edt_selector">

                        <!--  <Spinner
                              android:id="@+id/spinner_id_proof"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content" />
  -->
                        <EditText
                            android:id="@+id/txtIdProof"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp_8"
                            android:background="@drawable/edt_selector"
                            android:clickable="false"
                            android:enabled="false"
                            android:fontFamily="@font/lato_regular"
                            android:hint="Select Proof (Site Photo / Document)"
                            android:inputType="none"
                            android:padding="@dimen/dp_10"
                            android:textColor="@color/colorEdittextDark"
                            android:textSize="@dimen/sp_16" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/attach_id_proof"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/btn_selector_square"
                        android:onClick="CallCamera"
                        android:padding="@dimen/dp_6"
                        app:srcCompat="@drawable/ic_attachment" />

                </RelativeLayout>

                <!--                        android:onClick="@{() -> clickHandler.uploadDoc()}"
-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_25"
                    android:fontFamily="@font/lato_regular"
                    android:text="Comments"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_8"
                        android:background="@drawable/edt_selector">

                        <!-- <Spinner
                             android:id="@+id/spinner_letter_type"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content" />
 -->
                        <EditText
                            android:id="@+id/txtLetter"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginEnd="@dimen/dp_8"
                            android:background="@drawable/edt_selector"
                            android:clickable="false"
                            android:fontFamily="@font/lato_regular"
                            android:gravity="start"
                            android:hint="Type your message here"
                            android:inputType="none"
                            android:padding="@dimen/dp_10"
                            android:textAlignment="textStart"
                            android:textColor="@color/colorEdittextDark"
                            android:textSize="@dimen/sp_16" />

                    </RelativeLayout>


                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:drawableRight="@drawable/ic_asterisk"
                    android:drawablePadding="@dimen/dp_6"
                    android:fontFamily="@font/lato_regular"
                    android:text="Status"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8">

                    <TextView
                        android:id="@+id/txtOtherProof"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_8"
                        android:background="@drawable/edt_selector"
                        android:fontFamily="@font/lato_regular"
                        android:hint="Select Status (In Progress / Resolved / Demand)"
                        android:inputType="textCapSentences"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/colorEdittextDark"
                        android:textSize="@dimen/sp_16" />


                </RelativeLayout>

                <Button
                    android:id="@+id/submit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/dp_25"
                    android:background="@drawable/btn_selector"
                    android:fontFamily="@font/lato_semibold"
                    android:paddingLeft="@dimen/dp_30"
                    android:paddingRight="@dimen/dp_30"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_18" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>